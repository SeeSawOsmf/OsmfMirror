<mx:Application
	xmlns:mx			="http://www.adobe.com/2006/mxml"
	backgroundColor		="#000000"
	creationComplete	="init()"
	>
	
	<mx:Script>
		<![CDATA[
			import mx.core.UIComponent;

			public var videoPlayer:VideoPlayer;
			
			private function init():void
			{
				// Allow any SWF that loads this SWF to access objects and
				// variables in this SWF.
				Security.allowDomain(this.systemManager.loaderInfo.loaderURL);

				videoPlayer = new VideoPlayer("http://mediapm.edgesuite.net/strobe/content/test/AFaerysTale_sylviaApostol_640_500_short.flv");
				videoParent.addChild(videoPlayer.video);
			}
				
		]]>
	</mx:Script>
	
	<mx:Canvas
		width				="100%"
		height				="100%"
		>
		
		<mx:UIComponent
			id					="videoParent"
			horizontalCenter	="-320"
			verticalCenter		="-240"
			/>
				
		<mx:HBox
			width				="100%"
			height				="30"
			bottom				="140"
			verticalAlign		="middle"
			horizontalAlign		="center"
			>
	
			<mx:Button
				label	="Play"
				id		="playButton"
				click	="videoPlayer.playVideo()"
				/>
			<mx:Button
				label	="Pause"
				id		="pauseButton"
				click	="videoPlayer.pauseVideo()"
				/>
			<mx:Button
				label	="Mute"
				id		="muteButton"
				click	="videoPlayer.toggleMute()"
				/>
				
		</mx:HBox>

	</mx:Canvas>
		
</mx:Application>
