<mx:Canvas 
	xmlns:mx				="http://www.adobe.com/2006/mxml"
	xmlns:samples			="org.osmf.samples.*"
	>
	
	<!-- Center (Player) Region -->
	
	<samples:MediaPlayerWrapper
		id					="mediaPlayerWrapper"
		top					="0"
		left				="0"
		bottom				="0"
		right				="0"
		/>
	
	<!-- Upper Right Region -->
	
	<mx:HBox
		color				="white"
		right				="0"
		width				="120"
		height				="20"
		top					="20"
		>
		
		<mx:Label
			id				="version"
			/>
			
	</mx:HBox>
	
	<!-- Lower Region -->
	
	<mx:HBox
		width					="100%"
		height					="30"
		bottom					="140"
		verticalAlign			="middle"
		horizontalAlign			="center"
		>

		<mx:Button
			id					="buttonPlayPause"
			/>

	</mx:HBox>
</mx:Canvas>
