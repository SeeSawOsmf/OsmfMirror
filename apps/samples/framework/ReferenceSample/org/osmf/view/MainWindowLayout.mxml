<mx:Canvas 
	xmlns:mx				="http://www.adobe.com/2006/mxml"
	xmlns:players			="com.adobe.strobe.players.*"
	>
	
	<!-- Center (Player) Region -->
	
	<players:MediaPlayerWrapper
		id					="mediaPlayerWrapper"
		top					="0"
		left				="0"
		bottom				="0"
		right				="0"
		/>
	
	<!-- Lower Left Region -->
	
	<players:MediaPlayerWrapper
		id					="overlayMediaPlayer"
		width				="160"
		height				="120"
		left				="0"
		bottom				="0"
		/>			
	
	<!-- Lower Region -->
	
	<mx:HBox
		width					="100%"
		height					="30"
		bottom					="140"
		verticalAlign			="middle"
		horizontalAlign			="center"
		>

		<mx:Button
			id					="buttonPlayPause"
			/>
			
	</mx:HBox>
	
	<!-- Upper Right Region -->

	<mx:Text
		id						="description"
		top						="0"
		right					="0"
		width					="500"
		color					="white"
		fontSize				="12"
		/>

</mx:Canvas>
