<mx:Canvas 
	xmlns:mx					="http://www.adobe.com/2006/mxml"
	xmlns:players				="com.adobe.strobe.players.*"
	>
	
	<!-- Center (Player) Region -->
	
	<players:MediaPlayerWrapper
		id						="mediaPlayerWrapper"
		top						="0"
		left					="0"
		bottom					="0"
		right					="0"
		/>
	
	<!-- Upper Left Region -->
	
	<mx:VBox
		styleName				="panel"
		left					="0"
		top						="0"
		height					="100%"
		width					="300"
		verticalGap				="2"
		>
		
		<mx:Label
			text				="OSMF Examples"
			color				="white"
			fontWeight			="bold"
			fontSize			="20"
			/>
		
		<mx:Label
			id					="version"
			color				="white"
			fontStyle			="italic"
			fontSize			="8"
			/>

		<mx:Spacer
			height				="30"
			/>
			
		<mx:Label
			text				="Select an example from the list:"
			color				="gray"
			fontSize			="12"
			/>
			
		<mx:List
			id					="exampleList"
			color				="white"
			backgroundAlpha		="0"
			borderThickness		="0"
			width				="100%"
			height				="100%"
			alpha				="0.8"
			/>

	</mx:VBox>
	
	<!-- Upper Right Region -->

	<mx:Text
		id						="exampleDescription"
		top						="0"
		right					="0"
		width					="500"
		color					="gray"
		fontSize				="12"
		/>
	
	<!-- Lower Right Region -->
	
	<mx:HBox
		right					="0"
		width					="500"
		height					="30"
		bottom					="160"
		verticalAlign			="middle"
		horizontalScrollPolicy	="off"
		>

		<mx:Button
			styleName			="buttonPlay"
			id					="buttonPlay"
			label				=""
			visible				="false"
			/>
		<mx:Button
			styleName			="buttonPause"
			id					="buttonPause"
			label				=""
			visible				="false"
			/>

	</mx:HBox>

	
	<mx:HBox
		id						="temporalControls" 
		color					="white"
		right					="0"
		width					="500"
		height					="20"
		bottom					="140"
		verticalAlign			="middle"
		horizontalScrollPolicy	="off"
		>
		
		<mx:Label
			text				="Position:"
			/>
		<mx:Label
			id					="position"
			text				="0"
			/>
		<mx:HSlider 				
			width				="100%" 			
			id					="seekBar" 
			/>			
		<mx:Label
			id					="duration"
			/>
			
	</mx:HBox>
	
	<mx:HBox
		id						="bufferable"
		color					="white"
		right					="0"
		width					="500"
		height					="20"
		bottom					="120"
		verticalAlign			="middle"
		horizontalScrollPolicy	="off"
		>
		
		<mx:Label
			text				="Buffer Time: "
			/>
		<mx:Label
			id					="bufferTime"
			/>
		<mx:Label
			text				="Buffer Length: "
			/>
		<mx:Label
			id					="bufferLength"
			/>

	</mx:HBox>
	
	<mx:HBox
		id						="downloadable"
		color					="white"
		right					="0"
		width					="500"
		height					="20"
		bottom					="100"
		verticalAlign			="middle"
		horizontalScrollPolicy	="off"
		>
		
		<mx:Label
			text				="Bytes Downloaded: "
			/>
		<mx:Label
			id					="bytesDownloaded"
			/>
		<mx:Label
			text				="Bytes Total: "
			/>
		<mx:Label
			id					="bytesTotal"
			/>

	</mx:HBox>
	
	<mx:HBox
		id						="audioControls" 
		right					="0"
		width					="500"
		height					="20"
		bottom					="80"
		color					="white"
		verticalAlign			="middle"
		horizontalScrollPolicy	="off"
		>
		
		<mx:Label
			text				="Volume:"
			/>
		<mx:HSlider 			
			value				="1"	
			width				="100%"
			maximum				="1"
			id					="volumeSlider" 
			/>
		<mx:CheckBox
			id					="muteToggle"
			toggle				="true"
			label				="Mute"
			textRollOverColor	="white"
			textSelectedColor	="white"
			/>
		<mx:Label
			text				="Pan:"
			/>	
		<mx:HSlider 
			width				="100%" 
			minimum				="-1"
			value				="0"
			maximum				="1"
			id					="panControl" 
			/>
			
	</mx:HBox>
	
	<mx:HBox
		id						="stateControls"
		color					="white"
		right					="0"
		width					="500"
		height					="20"
		bottom					="60"
		visible					="false"
		verticalAlign			="middle"
		horizontalScrollPolicy	="off"
		>
		
		<mx:Label
			text				="Player State: "
			/>
		<mx:Text
			id					="playerState"
			/>

	</mx:HBox>
	
	<mx:HBox
		id						="errorCodeBox"
		color					="white"
		right					="0"
		width					="500"
		height					="20"
		bottom					="40"
		visible					="false"
		verticalAlign			="middle"
		horizontalScrollPolicy	="off"
		>

		<mx:Label
			text				="Error Code: "
			/>
		<mx:Label
			id					="errorCode"
			text				=""
			/>
			
	</mx:HBox>
	
	<mx:HBox
		id						="errorDescriptionBox"
		color					="white"
		right					="0"
		width					="500"
		height					="20"
		bottom					="20"
		visible					="false"
		verticalAlign			="middle"
		horizontalScrollPolicy	="off"
		>
	
		<mx:Label
			text				="Error Description: "
			/>
		<mx:Label
			id					="errorDescription"
			text				=""
			/>
	</mx:HBox>

	<mx:HBox
		id						="errorDetailBox"
		color					="white"
		right					="0"
		width					="500"
		height					="20"
		bottom					="0"
		visible					="false"
		verticalAlign			="middle"
		horizontalScrollPolicy	="off"
		>
	
		<mx:Label
			text				="Error Detail: "
			/>
		<mx:Label
			id					="errorDetail"
			width				="100%"
			toolTip				="{errorDetail.text}"
			/>
	</mx:HBox>
	
</mx:Canvas>

